<div class="page-header">
  <h2>Tasks</h2><%= link_to 'Create New Task', new_task_path, class: "label label-default" %>
</div>

<% @tasks.each do |task| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= task.title %></h3>
    </div>
    <div class="panel-body">
      <p>
        <%= task.description %>
      </p>
        <p>
          <strong>Assigned to:</strong>
          <% if task.assignee %>
            <%= link_to task.assignee.full_name, user_path(task.assignee) %>
          <% else %>
            <strong>NO ASSIGNEE</strong>
          <% end %>
        </p>
    </div>
    <div class="panel-footer">
      <small>Created by <%= link_to task.user.full_name, user_path(task.user) %>, <%= time_ago_in_words(task.created_at) %> ago, updated <%= time_ago_in_words(task.updated_at) %> ago</small>
      <%= link_to 'Show', task, class: "label label-primary" %>
      <%= link_to 'Edit', edit_task_path(task), class: "label label-warning" %>
      <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger" %>
    </div>
  </div>
<% end %>
